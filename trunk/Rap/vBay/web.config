  </appSettings>
  <connectionStrings>
    <add name="DauGia" connectionString="Data Source=YAMA-PC\;Initial Catalog=DauGia;User ID=vbay;Password=admin"
      providerName="System.Data.SqlClient" />
    <add name="DauGiaConnectionString" connectionString="Data Source=YAMA-PC;Initial Catalog=DauGia;Persist Security Info=True;User ID=vbay;Password=admin"
      providerName="System.Data.SqlClient" />
    <add name="DauGiaConnectionString1" connectionString="Data Source=NGUYENDINHLUYEN\SQLEXPRESS;Initial Catalog=DauGia;User ID=vbay;Password=admin"
      providerName="System.Data.SqlClient" />
